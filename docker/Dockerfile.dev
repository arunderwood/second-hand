# Dockerfile for development with chronyd
FROM debian:bookworm-slim

# Install chrony and curl (for uv installation)
RUN apt-get update && apt-get install -y \
    chrony \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create chrony socket directory with correct permissions
RUN mkdir -p /run/chrony && chown _chrony:_chrony /run/chrony && chmod 750 /run/chrony

# Configure chronyd for testing (local reference clock + Unix socket)
RUN echo "local stratum 10" >> /etc/chrony/chrony.conf && \
    echo "allow 127.0.0.1" >> /etc/chrony/chrony.conf && \
    echo "cmdallow 127.0.0.1" >> /etc/chrony/chrony.conf && \
    echo "cmdport 0" >> /etc/chrony/chrony.conf && \
    echo "bindcmdaddress /run/chrony/chronyd.sock" >> /etc/chrony/chrony.conf

# Install uv for dependency management
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:$PATH"

# Set up working directory
WORKDIR /app

# Copy project files
COPY pyproject.toml uv.lock* README.md .python-version ./
COPY src/ ./src/

# Install dependencies (set version for setuptools-scm since .git is not copied)
ENV SETUPTOOLS_SCM_PRETEND_VERSION=0.1.0
RUN uv sync --all-extras

# Set environment variables
ENV PYTHONPATH=/app/src
ENV PYTHONUNBUFFERED=1

# Expose the app port
EXPOSE 8000

# Start chronyd and then the app
CMD ["sh", "-c", "chronyd && sleep 2 && uv run uvicorn second_hand.main:app --host 0.0.0.0 --port 8000"]
